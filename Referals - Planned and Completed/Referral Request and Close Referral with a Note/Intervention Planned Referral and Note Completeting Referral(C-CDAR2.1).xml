                        <code code="207Q00000X" displayName="Allopathic &amp; Osteopathic Physicians : Family Medicine" codeSystem="2.16.840.1.113883.6.101" codeSystemName="NUCC" />
                        <addr nullFlavor="UNK" />
                        <telecom nullFlavor="UNK" />
                        <assignedPerson>
                            <name>
                                <family>Eighth</family>
