                        <id root="9a6d1bac-17d3-4195-89a4-1121bc809b4e"/>
                        <code code="103697008" displayName="Patient referral to specialist" codeSystemName="SNOMED CT" codeSystem="2.16.840.1.113883.6.96" />
                    </externalAct>
