    <!-- This example is created to help with the documentation of a referral request, and then a completed encounter. -->
    <!-- This includes a first section of planned referral that opens the loop and a second section of a completed encounter which closes loop -->
    <!-- While both XML sections are included below, in real implementations, they would be expected to be split between two separate documents -->
    <!-- If they are BOTH in a SINGLE document, the statusCode of Patient Referral Act is problematic - fixed to active in C-CDA template design-->
    <component>
        <section>
            <!-- USCDI requires support for 'Reason for Referral' which HL7 mapped to the Reason for Referral Section -->
            <!-- The IHE 360x profile here: https://www.ihe.net/uploadedFiles/Documents/PCC/IHE_PCC_Suppl_360X.pdf recommends Interventions Section-->
            <templateId root="1.3.6.1.4.1.19376.1.5.3.1.3.1"/>
            <templateId root="1.3.6.1.4.1.19376.1.5.3.1.3.1" extension="2014-06-09"/>
            <code code="42349-1" codeSystem="2.16.840.1.113883.6.1" codeSystemName="LOINC"
                displayName="Reason for Referral "/>
            <title>REASON FOR REFERRAL</title>
            <!-- one patient referral act in the human readable text and as a discrete entry -->
            <text>
                <table>
                    <caption>Planned Referral</caption>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ID="ReasonForReferralFullAct1">
                            <td ID="ReasonForReferralCode1">Referral to fair housing
                                assistance program</td>
                            <td>June 25, 2018</td>
                            <td>Dr. Henry Levine Eighth, as soon as possible</td>
                        </tr>
                    </tbody>
                </table>
            </text>
            <!-- a patient referral act -->
            <!-- Reason for the referral -->
            <entry>
                <act moodCode="INT" classCode="PCPR">
                    <templateId root="2.16.840.1.113883.10.20.22.4.140"/>
                    <!-- This id may be referenced in the note received afterward -->
                    <id root="c3021854-e15e-4e9d-aa59-abc49c1abc59"/>
                    <code code="471071000124109"
                        displayName="Referral to fair housing assistance program (procedure)"
                        codeSystemName="SNOMED CT" codeSystem="2.16.840.1.113883.6.96">
                        <originalText>
                            <reference value="#ReasonForReferralCode1"/>
                        </originalText>
                    </code>
                    <text>
                        <!-- referencing the entire text -->
                        <reference value="#ReasonForReferralFullAct1"/>
                    </text>
                    <statusCode code="active"/>
                    <effectiveTime value="20180625"/>
                    <priorityCode code="A" codeSystem="2.16.840.1.113883.5.7"
                        codeSystemName="ActPriority" displayName="ASAP"/>
                    <!-- Provider Writing the Referral -->
                    <author>
                        <templateId root="2.16.840.1.113883.10.20.22.4.119"/>
                        <time value="20100103"/>
                        <assignedAuthor>
                            <id extension="99999999" root="2.16.840.1.113883.4.6"/>
                            <code code="207Q00000X" codeSystem="2.16.840.1.113883.6.101"
                                codeSystemName="Health Care Provider Taxonomy" displayName="Allopathic &amp; Osteopathic Physicians; Family Medicine"/>
                            <telecom use="WP" value="tel:555-555-1002"/>
                            <assignedPerson>
                                <name>
                                    <given>Henry</given>
                                    <family>Seven</family>
                                </name>
                            </assignedPerson>
                        </assignedAuthor>
                    </author>                            
                    
                    <!-- Provider, or speciality, that is being referred to - REFT is Referred to -->
                    <participant typeCode="REFT">
                        <participantRole classCode="PROV">
                            <!-- Having this be an NPI may be used to identify completion of referral -->
                            <id root="2.16.840.1.113883.4.6" extension="1093929010"/>
                            <code code="207Q00000X"
                                displayName="Allopathic &amp; Osteopathic Physicians; Family Medicine"
                                codeSystem="2.16.840.1.113883.6.101" codeSystemName="NUCC"/>
                            <!-- Address of location provider is associated with -->
                            <!-- Not always same as referral location -->
                            <addr>
                                <streetAddressLine>100 Main St</streetAddressLine>
                                <city>Horsham</city>
                                <state>PA</state>
                                <postalCode>19044</postalCode>
                                <country>US</country>
                            </addr>
                            <telecom nullFlavor="UNK"/>
                            <playingEntity>
                                <name>
                                    <family>Eighth</family>
                                    <given>Henry</given>
                                    <given>Levine</given>
                                </name>
                            </playingEntity>
                        </participantRole>
                    </participant>
                    <!-- Preferred Referral Location (receiver), where they are being sent -->
                    <!-- NOT INCLUDED in CURRENT REFERRAL DESIGN - -->
                    <participant typeCode="REFT">
                        <participantRole classCode="SDLOC">
                            <templateId root="2.16.840.1.113883.10.20.22.4.32"/>
                            <code code="1161-9" codeSystem="2.16.840.1.113883.6.259"
                                codeSystemName="HealthcareServiceLocation"
                                displayName="Holistic Medicine Center"/>
                            <addr>
                                <streetAddressLine>63 Berry Ridge</streetAddressLine>
                                <city>Lakeview</city>
                                <state>MN</state>
                                <postalCode>02368</postalCode>
                                <country>US</country>
                            </addr>
                            <telecom use="WP" value="tel:+1(555)555-5000"/>
                            <playingEntity classCode="PLC">
                                <name>Holistic Medicine Center Housing Support</name>
                            </playingEntity>
                        </participantRole>
                    </participant>
                    <!-- OPTIONAL: entryRelationship Indication to a Problem in Problem Section that supports the Reason for the Referral  
                            <entryRelationship typeCode="RSON">
                                <observation classCode="OBS" moodCode="EVN">
                                    <templateId root="2.16.840.1.113883.10.20.22.4.19" extension="2014-06-09" />
                                  - Note that this id equals the problem observation/id 
S                                    <id root="706d2c19-fb67-49e0-8344-e74f357c3349" />
                                    <code code="ASSERTION" codeSystem="2.16.840.1.113883.5.4" />
                                    <statusCode code="completed" />
                                    - Can repeat effectiveTime and value here to match Problem Observation, but not required
                                </observation>
                                </entryRelationship> -->
                    <entryRelationship typeCode="SUBJ" inversionInd="true">
                        <observation classCode="OBS" moodCode="EVN">
                            <!-- Find a code for referral status? -->
                            <!-- SNOMED Concept is classified as Finding - Should be Observable Entity-->
                            <code code="309012006" displayName="Referral Status"
                                codeSystemName="SNOMED CT" codeSystem="2.16.840.1.113883.6.96">
                            <statusCode code="completed" />
                            <effectiveTime value="20180625"/>
                            <!-- Customer Specified Referral status -->
                            <value xsi:type="CD" code="Eligible" displayName="Eligible" codeSystem="2.16.840.1.113883.17.9509.7"/>
                          </observation>
                    </entryRelationship>
                </act>
            </entry>
        </section>
    </component>
    <!-- The section below would likely be included in a separate document, although included here for a single sample -->
    <component>
        <section>
            <!-- This is an example of a social service completing a referral in encounters section. -->
            <templateId root="2.16.840.1.113883.10.20.22.2.22.1"/>
            <templateId root="2.16.840.1.113883.10.20.22.2.22.1" extension="2015-08-01"/>
            <code code="46240-8" codeSystem="2.16.840.1.113883.6.1" displayName="Encounters"
                codeSystemName="LOINC"/>
            <title>Encounters</title>
            <text>
                <table>
