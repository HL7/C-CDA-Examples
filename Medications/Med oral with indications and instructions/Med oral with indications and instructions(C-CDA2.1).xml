                    <text>
                        <reference value="#MedicationIndication_84838281"/>
                    </text>
                    <statusCode code="completed"/>
                    <effectiveTime>
                        <low nullFlavor="NI"/>
                    </effectiveTime>
                    <value xsi:type="CD" code="57676002" codeSystem="2.16.840.1.113883.6.96" displayName="Joint pain" />
